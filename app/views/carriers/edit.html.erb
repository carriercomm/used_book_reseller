<h1>Editing carrier</h1>

<% form_for(@carrier) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :url %><br />
    <%= f.text_field :url %>
  </p>
  <p>
    <%= f.label :tracking_url %><br />
    <%= f.text_field :tracking_url %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @carrier %> |
<%= link_to 'Back', carriers_path %>
