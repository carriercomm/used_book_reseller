<div id="shop_browser" class="box green_gray full_span">
  <div id="filters">
   <%=link_to_remote 'browse', :url => change_browser_categories_path(:to => "categories")%>
  </div>
  <h2>Search</h2>
  <div id="shop_browser_content" class="box_interior">
    <%= render :partial => "shared/search_box", :locals => {:classname=> "large_field"} %>
  </div>
</div>

<div id="search_products" class="box full_span">
  <div id="filters">
    by <%=link_to 'latest', path_with_filter("id"), :class => "#{'selected' if @filter == 'id'}"%>
  	<%=link_to 'title', path_with_filter("title"), :class => "#{'selected' if @filter == 'title'}"%>
  	<%=link_to 'price', path_with_filter("offer_cents"), :class => "#{'selected' if @filter == 'offer_cents'}"%>
  </div>
  <h2>Your Search Results</h2>
  <div id="search_products_content" class="box_interior">
    <p>Your search "<%= params[:q] %>" produced <%=pluralize @products.size, "result"%></p>
    <p class="emphasized smaller">* All products are sold postage paid (shipping is FREE!)</p>
      <table>
        <%= render :partial => "shared/product", :collection => @products %>
      </table>
  </div>
</div>

  



