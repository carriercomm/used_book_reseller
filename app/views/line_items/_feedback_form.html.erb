<div class="form">
<% remote_form_for feedback do |f| %>
<div class="interior_form left">  
  <p>
  <%= f.label :rating, "Rating (5 is excellent)" %> <br/>
  <%= f.select :rating, ["5", "4", "3", "2", "1"] %>
  </p>
  <%= hidden_field_tag :line_item_id, @line_item.id%>
  <%= submit_tag "Save Feedback"%>
  
</div>
<div class="interior_form right"> 
  <p>
   <%= f.label :comment %><br/>
   <%= f.text_field :comment, :size => 40 %>
   </p>
</div>
<% end %>
<div class="clear_fix">&nbsp;</div>
</div>

