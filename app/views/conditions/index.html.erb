<h1>Listing conditions</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Requires comment</th>
  </tr>

<% for condition in @conditions %>
  <tr>
    <td><%=h condition.name %></td>
    <td><%=h condition.description %></td>
    <td><%=h condition.requires_comment %></td>
    <td><%= link_to 'Show', condition %></td>
    <td><%= link_to 'Edit', edit_condition_path(condition) %></td>
    <td><%= link_to 'Destroy', condition, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

