<h1>Listing forums</h1>

<table>
  <tr>
  </tr>
  
<% for forum in @forums %>
  <tr>
    <td><%= link_to 'Show', forum_path(forum) %></td>
    <td><%= link_to 'Edit', edit_forum_path(forum) %></td>
    <td><%= link_to 'Destroy', forum_path(forum), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New forum', new_forum_path %>